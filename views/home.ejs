<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee shop</title>
    <link rel="stylesheet" href="/public/css/nav.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/homepage.css">
    <link rel="shortcut icon" href="/public/img/coffee-logo.png" type="image/x-icon">
</head>
<body>

    <% if(user){ %>
        <nav class="navbar">
            <a href="/"><img class="logo" src="/public/img/coffee-logo.png" alt=""></a>
            <div class="navbar-collapse">
                <ul class="navbar-list">
                  <li class="navbar-item"><a href="#" class="navbar-link">Liste de produits</a></li>
                  <li class="navbar-item navbar-right"><a href="#" class="navbar-link">Mon panier</a></li>
                  <% if(isAdmin){ %>
                    <li class="navbar-item navbar-right"><a href="/add-product" class="navbar-link">Add Product</a></li>
                  <% } %>
                </ul>
                <div class="navbar-auth">
                  <a href="/me" class="navbar-auth-link"><img src="/public/img/user.png" alt=""></a>
                </div>
            </div>
        </nav>
        <div class="burger visible">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <aside>
            <a href="/"><img class="logo" src="/public/img/coffee-logo.png" alt=""></a>
            <div class="navbar-collapse">
                <ul class="navbar-list">
                  <li class="navbar-item"><a href="#" class="navbar-link">Liste de produits</a></li>
                  <li class="navbar-item navbar-right"><a href="#" class="navbar-link">Mon panier</a></li>
                  <% if(isAdmin){ %>
                    <li class="navbar-item navbar-right"><a href="/add-product" class="navbar-link">Add Product</a></li>
                  <% } %>
                </ul>
                <div class="navbar-auth">
                  <a href="/me" class="navbar-auth-link">Mon compte</a>
                </div>
            </div>
          </aside>
    <% }else{ %>
        <%- include('partials/nav.ejs') %>
    <% } %>

    <section class="slider-container">
        <div class="slider">
            <div class="slide slide1"></div>
            <div class="slide slide2"></div>
            <div class="slide slide3"></div>
            <div class="slide slide4"></div>
        </div>
        <div class="slider-controls">
            <button class="slider-control">&#8249;</button>
            <button class="slider-control">&#8250;</button>
        </div>
    </section>

    <main class="container">
        <h1 class="animated-text">Bienvenue dans notre café</h1>
        <p class="animated-text">Découvrez notre délicieuse sélection de cafés</p>
    </main>
    <h2>Notre game de café :</h2>
    <section class="articles">
      
      <% produits.forEach(function(produit) { %>
        <div class="article">
          
          <img src="/public/img/<%= produit.image %>" alt="">
          <h3><%= produit.titre %></h3>
          <div class="flex">
            <h4>Prix : <%= produit.prix %> €</h4>  
            <h4><%= produit.categorie %></h4>          
          </div>   

          <p class="truncate"><br><%= produit.description %></p>
        </div>
      <%})%>
    </section>
    <script src="/public/js/home.js"></script>
    <script src="/public/js/navBurger.js"></script>
</body>
</html>
